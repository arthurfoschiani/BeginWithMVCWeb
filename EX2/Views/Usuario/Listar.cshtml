@using EX2.Models

@{
    Layout = "Masterpage";
    ViewBag.Title = "Lista de Usuarios";
}
<h2>@TempData["mensagem"]</h2>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nome</th>
            <th scope="col">Email</th>
            <th scope="col">Senha</th>
            <th scope="col">Data de Nascimento</th>
            <th scope="col">Ações</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in ViewData["usuarios"] as List<UsuarioModel>) {
        <tr>
            <td>@item.Id</td>
            <td>@item.Nome</td>
            <td>@item.Email</td>
            <td>@item.Senha</td>
            <td>@item.DataNascimento.ToShortDateString()</td>
            <td>
                <a href="/Usuario/Editar?id=@item.Id">Editar</a>
                <a href="/Usuario/Excluir?id=@item.Id">Excluir</a>
            </td>
        </tr>
    }
    </tbody>
</table>